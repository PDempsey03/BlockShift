<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.CreateAccountFragment">

    <!-- Username input field -->
    <EditText
        android:id="@+id/create_account_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username_hint"
        android:inputType="text"
        android:padding="15dp"
        android:backgroundTint="@color/black" />

    <TextView
        android:id="@+id/create_account_username_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingStart="5dp" />

    <TextView
        android:id="@+id/create_account_username_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:paddingBottom="15dp"
        android:paddingStart="5dp" />

    <!-- Password input field -->
    <EditText
        android:id="@+id/create_account_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:padding="15dp"
        android:backgroundTint="@color/black" />

    <TextView
        android:id="@+id/create_account_password_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingStart="5dp" />

    <TextView
        android:id="@+id/create_account_password_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:paddingBottom="15dp"
        android:paddingStart="5dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        tools:context=".login.CreateAccountFragment">

        <!-- Back Button -->
        <Button
            android:id="@+id/create_account_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_text"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:paddingEnd="15dp"
            android:padding="12dp" />

        <!-- Create Account Button -->
        <Button
            android:id="@+id/create_account_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:padding="12dp" />

    </LinearLayout>



</LinearLayout>